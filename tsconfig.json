{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "outDir": "dist",
    "types": ["bun-types"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*", "tests/**/*"]
}
